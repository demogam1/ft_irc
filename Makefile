CXX = clang++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98
NAME = a.out 
SRC =	main.cpp \
		Server.cpp \
		Client.cpp \
		Command.cpp \
		Channel.cpp \
		pass.cpp \
		nick.cpp \
		user.cpp \
		quit.cpp \
		oper.cpp \
		mode.cpp \
		join.cpp \
		pong.cpp \
		kill.cpp \
		privmsg.cpp \

OBJ = $(SRC:.cpp=.o)

all : $(NAME)

$(NAME) : $(OBJ)
	$(CXX) $(CXXFLAGS) $^ -o $@

%.o : %.c
	$(CXX) $(CXXFLAGS) -c $< -o $@ 

clean :
	@rm -rf $(OBJ)

fclean : clean
	@rm -rf $(NAME)

re : fclean all

.PHONY : all clean fclean re
